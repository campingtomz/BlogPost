@model blog.Models.Comment

@{
    ViewBag.Title = "Details";
}




<div class="comment">
    <div class="comment-body">
        @*<div class="meta">@comment.Created.ToString("MMM dd yyyy")</div>*@
        <p id="comment-@Model.Id">@Html.Raw(Model.Body)</p>
        @if (Model.AuthorId != null)
        {
            <p>By: @Model.Author.DisplayName on @Model.Created.ToString("MMM dd yyyy") </p>}
        <hr />
        @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
        {
            @Html.ActionLink("Edit Comment", "Edit", "Comments", new { id = Model.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Delete Comment", "Delete", "Comments", new { id = Model.Id }, new { @class = "btn btn-warning" })}

    </div>
</div>
<p>

    @Html.ActionLink("Back to List", "Index")
</p>

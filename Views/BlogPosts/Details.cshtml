@model blog.Models.BlogPost
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div class="container">

    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 single-content">

                    <p class="mb-5">
                        <img src="images/big_img_1.jpg" alt="Image" class="img-fluid">
                    </p>
                    <h1 class="mb-4">@Model.Title           
                    </h1>
                    <div class="post-meta d-flex mb-5">
                        <div class="bio-pic mr-3">
                            <img src="images/person_1.jpg" alt="Image" class="img-fluidid">
                        </div>
                        <div class="vcard">
                            <span class="d-block"><a href="#">Thomas Zanis</a> in <a href="#">News</a></span>
                            <span class="date-read">@Model.Created.ToString("MMM dd yyyy") <span class="mx-1">&bullet;</span> 3 min read <span class="icon-star2"></span></span>
                        </div>
                        <p>@Model.Body</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>








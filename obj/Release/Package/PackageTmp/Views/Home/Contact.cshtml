@model blog.Models.EmailModel
@{
    ViewBag.Title = "Contact";
}
<link href="~/Content/ContactForm/main.css" rel="stylesheet" />
<link href="~/Content/ContactForm/util.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container-contact100">
        <div class="wrap-contact100">
            <form class="contact100-form validate-form">
                <span class="contact100-form-title">
                    Send Us A Message
                </span>
                @Html.LabelFor(m => m.FromName, new { @class = "label-input100" })
                <div class="wrap-input100 ">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "input100" })
                    <span class="focus-input100"></span>
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>

                @Html.LabelFor(m => m.FromEmail, new { @class = "label-input100" })
                <div class="wrap-input100 ">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "input100" })
                    <span class="focus-input100"></span>
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
                @Html.LabelFor(m => m.Subject, new { @class = "label-input100" })
                <div class="wrap-input100 ">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "input100" })
                    <span class="focus-input100"></span>
                    @Html.ValidationMessageFor(m => m.Subject)
                </div>
                @Html.LabelFor(m => m.Body, new { @class = "label-input100" })
                <div class="wrap-input100 ">
                    @Html.TextBoxFor(m => m.Body, new { @class = "input100" })
                    <span class="focus-input100"></span>
                    @Html.ValidationMessageFor(m => m.Body)
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Send" />
                    </div>
                </div>
                @*<div class="container-contact100-form-btn">
            <button class="contact100-form-btn">
                Send Message
            </button>
        </div>*@
            </form>
        </div>
    </div>
}



@model blog.Models.ExtendedRegisterViewModel
@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Register";
}

<link href="~/Content/registration.css" rel="stylesheet" />



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


<div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
    @*<div class="wrapper wrapper--w680">*@
    <div class="card card-4">
        <div class="card-body">
            <h2 class="title">@ViewBag.Title.</h2>
            <form method="POST">
                <div class="row row-space">
                    <div class="col-6">
                        <div class="input-group">
                            @Html.LabelFor(m => m.FirstName, new { @class = "label" })
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "input--style-4" })
                        </div>
                    </div>


                    <div class="col-6">
                        <div class="input-group">
                            @Html.LabelFor(m => m.LastName, new { @class = "label" })
                            @Html.TextBoxFor(m => m.LastName, new { @class = "input--style-4" })
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-6">
                        <div class="input-group">
                            @Html.LabelFor(m => m.Password, new { @class = "label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "input--style-4" })
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="input-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input--style-4" })
                        </div>
                    </div>
                </div>

                <div class="row row-space">
                    <div class="col-6">
                        <div class="input-group">
                            @Html.LabelFor(m => m.Email, new { @class = "label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "input--style-4" })
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label">Phone Number</label>
                            <input class="input--style-4" type="text" name="phone">
                        </div>
                    </div>

                </div>
                <div class="p-t-15">
                    <button class="btn btn--radius-2 btn--blue" type="submit">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
     





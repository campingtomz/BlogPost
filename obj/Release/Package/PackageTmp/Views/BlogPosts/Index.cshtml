@using PagedList;
@using PagedList.Mvc;
@model IPagedList<blog.Models.BlogPost>
@*@model IEnumerable<blog.Models.BlogPost>*@
@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2>Index</h2>
    @using (Html.BeginForm("Index", "BlogPosts", FormMethod.Get, new { @class = "form" }))
    {
        <div class ="controls controls-row search-row">
            <input id ="searchStr" name="searchStr" class="input-block-level" type="text" placeholder="Search">
                <button id ="searchStr" name="searchStr" class="btn btn-success" type="submit">
                    <i class ="icon-search">
                        </i>
                        </button>
    </div>
}
    <p>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        }
    </p>

    <table class="table">
        <tr>
            <th>

                @Html.DisplayName("Created")
            </th>
            <th>
                @Html.DisplayName("Updated")
            </th>
            <th>
                @Html.DisplayName("Title")
            </th>

            <th>
                @Html.DisplayName("Abstract")
            </th>
     
            <th>
                @Html.DisplayName("Categories")
            </th>
            <th>
                @Html.DisplayName("MediaURL")
            </th>
            <th>
                @Html.DisplayName("Published")
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.Created.ToString("dddd, dd MMMM yyyy")
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Updated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Slug)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Abstract)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Body)
                        @Html.Raw(item.Body)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Categories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MediaURL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>

                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })<span>|</span>
                    }
                    @Html.ActionLink("Details", "Details", new { slug = item.Slug })<span>|</span>

                </td>
            </tr>

        }

    </table>
    </div>
    page @(Model.PageCount < Model.PageNumber? 0 : Model.PageNumber)
    @Html.PagedListPager(Model, page => Url.Action("Index", new { Page, searchStr = ViewBag.Search }))

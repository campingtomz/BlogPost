@model IEnumerable<blog.Models.BlogPost>
@{ ViewBag.Title = "Index"; }
<h2>Index</h2>

<div class="table-responsive m-t-40">
    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
        <tr>
            <th>

                @Html.DisplayName("Created")
            </th>
            <th>
                @Html.DisplayName("Updated")
            </th>
            <th>
                @Html.DisplayName("Title")
            </th>
            <th>
                @Html.DisplayName("Abstract")
            </th>
            <th>
                @Html.DisplayName("Categories")
            </th>
            <th>
                @Html.DisplayName("MediaURL")
            </th>
            <th>
                @Html.DisplayName("Published")
            </th>
            <th>
                Action
            </th>
            
        </tr>


        @foreach (var item in Model)
        {

<tr>
    <td>
        @item.Created.ToString("dddd, dd MMMM yyyy")
    </td>
    <td>

        @Html.DisplayFor(modelItem => item.Updated)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Abstract)
    </td>

    <td>

        @foreach (var category in item.Categories.ToList())
        {
<p>@category.Name</p>}

        @*@Html.DisplayFor(modelItem => item.Categories)*@
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MediaURL)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Published)
    </td>
    <td>

        @if (User.IsInRole("Admin"))
        {
@Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })<span>|</span>}
        @Html.ActionLink("Details", "Details", new { slug = item.Slug })<span>|</span>

    </td>
</tr>
}

    </table>
</div>




<p>
    @if (User.IsInRole("Admin"))
    {
@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })}
</p>



@section Scripts
{
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();

            $(document).ready(function () {
                var table = $('#example').DataTable({
                    "columnDefs": [{
                        "visible": false,
                        "targets": 2
                    }],
                    "order": [
                        [2, 'asc']
                    ],
                    "displayLength": 25,
                    "drawCallback": function (settings) {
                        var api = this.api();
                        var rows = api.rows({
                            page: 'current'
                        }).nodes();
                        var last = null;
                        api.column(2, {
                            page: 'current'
                        }).data().each(function (group, i) {
                            if (last !== group) {
                                $(rows).eq(i).before('<tr class="group"><td colspan="5">' + group + '</td></tr>');
                                last = group;
                            }
                        });
                    }
                });
                // Order by the grouping
                $('#example tbody').on('click', 'tr.group', function () {
                    var currentOrder = table.order()[0];
                    if (currentOrder[0] === 2 && currentOrder[1] === 'asc') {
                        table.order([2, 'desc']).draw();
                    } else {
                        table.order([2, 'asc']).draw();
                    }
                });
            });

            $('#example23').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
            
        });

    </script>
}
